
<h1>Home</h1>

<% if flash[:error] %>
  <div id="error_explanation">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_tag '/login' do %>
  <p>
    <%= label_tag :user_name %><br>
    <%= text_field_tag :user_name %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>


<%= link_to 'New Account', new_user_path %>
